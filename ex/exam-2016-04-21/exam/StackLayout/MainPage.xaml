<Page
    x:Class="StackLayout.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StackLayout"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
<StackPanel Orientation="Vertical" Width="350" Height="650" Background="White">
    <StackPanel.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </StackPanel.Resources>
    <Button Width="200" Height="150" Margin="0,0,150,-25">Button 1</Button>
    <Button Width="200" Height="200" Margin="150,-25,0,-25">Button 2</Button>
    <Button Width="350" Height="150" Margin="0,-25,0,-25">Button 3</Button>
    <Button Width="200" Height="200" Margin="150,-25,0,-25">Button 4</Button>
    <Button Width="200" Height="150" Margin="0,-25,150,0">Button 5</Button>
</StackPanel>
    </Grid>

</Page>
